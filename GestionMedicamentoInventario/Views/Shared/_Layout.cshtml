<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="row" id="bs-example-navbar-collapse-1">
                <div class="nav navbar-nav navbar-right">
                    <div><h2>@GestionMedicamentoInventario.Seguridad.SessionPersister.Username</h2></div>
                    <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Account")</li>
                </div>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="fixed navbar-fixed-top">
                <ul class="nav nav-sidebar">
                    <li>@Html.ActionLink("Usuario", "Index", "Usuarios")</li>
                    <li>@Html.ActionLink("Lote", "Index", "Lotes")</li>
                    <li>@Html.ActionLink("Categoria", "Index", "Categorias")</li>
                    <li>@Html.ActionLink("Entrada", "Index", "Compras")</li>
                    <li>@Html.ActionLink("Detalle", "Index", "Detalles")</li>
                    <li>@Html.ActionLink("Empresa", "Index", "Empresas")</li>
                    <li>@Html.ActionLink("Inventario", "Index", "Inventarios")</li>
                    <li>@Html.ActionLink("Kardex", "Index", "Kardexes")</li>
                    <li>@Html.ActionLink("Medicamento", "Index", "Medicamentoes")</li>
                    <li>@Html.ActionLink("Rols", "Index", "Rols")</li>
                    <li>@Html.ActionLink("Salida", "Index", "Ventas")</li>
                </ul>
            </div>
            <div class="content col-sm-10 col-md-10 col-lg-10">
                <div class="pre-scrollable">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>