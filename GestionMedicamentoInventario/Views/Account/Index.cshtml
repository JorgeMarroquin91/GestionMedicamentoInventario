@model GestionMedicamentoInventario.Models.AccountViewModel
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body#LoginForm {
            background-image: url(../IMG/blur-26347-27038-hd-wallpapers.jpg);
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            padding: 10px;
        }

        .form-heading {
            color: #fff;
            font-size: 23px;
        }

        .panel h2 {
            color: #444444;
            font-size: 18px;
            margin: 0 0 8px 0;
        }

        .panel p {
            color: #777777;
            font-size: 14px;
            margin-bottom: 30px;
            line-height: 24px;
        }

        .login-form .form-control {
            background: #f7f7f7 none repeat scroll 0 0;
            border: 1px solid #d4d4d4;
            border-radius: 4px;
            font-size: 14px;
            height: 50px;
            line-height: 50px;
        }

        .main-div {
            background: #ffffff none repeat scroll 0 0;
            border-radius: 2px;
            margin: 10px auto 30px;
            max-width: 38%;
            padding: 50px 70px 70px 71px;
        }

        .login-form .form-group {
            margin-bottom: 10px;
        }

        .login-form {
            text-align: center;
        }

        .forgot a {
            color: #777777;
            font-size: 14px;
            text-decoration: underline;
        }

        .login-form .btn.btn-primary {
            background: #f0ad4e none repeat scroll 0 0;
            border-color: #f0ad4e;
            color: #ffffff;
            font-size: 14px;
            width: 100%;
            height: 50px;
            line-height: 50px;
            padding: 0;
        }

        .forgot {
            text-align: left;
            margin-bottom: 30px;
        }

        .botto-text {
            color: #ffffff;
            font-size: 14px;
            margin: auto;
        }

        .login-form .btn.btn-primary.reset {
            background: #ff9900 none repeat scroll 0 0;
        }

        .back {
            text-align: left;
            margin-top: 10px;
        }

            .back a {
                color: #444444;
                font-size: 13px;
                text-decoration: none;
            }

    </style>
</head>
<body id="LoginForm">
    <br /><br /><br /><br />
    <div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="container">
                <div class="login-form">
                    <div class="main-div">
                        <div class="panel">
                            <h2>Iniciar Sesión</h2>
                            <p>Por Favor Introduce tus Credenciales</p>
                            @ViewBag.Error
                        </div>
                        <form id="Login">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Account.userName, new { htmlAttributes = new { id = "inputEmail", placeholder = "Nombre de Usuario", @class = "form-control" } })
                            </div><br />
                            <div class="form-group">
                                @Html.EditorFor(model => model.Account.password, new { htmlAttributes = new {Type="password" ,id = "inputPassword", placeholder = "Contraseña", @class = "form-control" } })
                            </div>
                            <br />
                            <br />
                            <input type="submit" class="btn btn-primary" value="Aceptar" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
